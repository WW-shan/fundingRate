# Telegram Bot配置
TG_BOT_TOKEN=your_telegram_bot_token_here
TG_CHAT_ID=your_telegram_chat_id_here

# Web配置
WEB_HOST=0.0.0.0
WEB_PORT=5000
SECRET_KEY=your_secret_key_for_flask_session_change_this_in_production

# Web认证配置
WEB_USERNAME=admin
# 使用pbkdf2方法的密码哈希 (兼容性更好,不依赖OpenSSL scrypt)
# 默认密码: 12345678
WEB_PASSWORD_HASH=pbkdf2:sha256:260000$a5491046f6538fd3dffe6073e20b9d6c$cd97df4fe2a737acf474caff68113ddf9c8c33549c7e7cea6003c941efacfc0d
# 生成新密码哈希: python -c "import hashlib, secrets; salt=secrets.token_hex(16); pwd='your_password'; h=hashlib.pbkdf2_hmac('sha256',pwd.encode(),salt.encode(),260000).hex(); print(f'pbkdf2:sha256:260000\${salt}\${h}')"

# 数据库配置
DATABASE_PATH=data/database.db
BACKUP_PATH=data/backups

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 系统配置
ENABLE_TRADING=False  # 设置为True以启用实际交易（默认False为安全起见）
